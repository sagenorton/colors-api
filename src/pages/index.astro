---
// Import Stylesheet
import { map } from 'astro/zod';
import '../styles/global.css';



// data source
const source = 'https://rickandmortyapi.com/api/character';
// fetch the data
const res = await fetch(source); 
// store retreived data
const data = await res.json();
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">

		<title>Retreive and and display external API data with Astro</title>
	</head>
	<body>
		
		<header class="masthead">
			<h1 class="site-title">Rick and Morty Gallery</h1>
		</header>

		<main id="content" class="main-area">

			<ul class="cards">
		  
				<!-- Your API Data -->
				{
					data.results.map( (item) => 

					<li class="card-item">
      
      				<!-- Make card clickable  -->
      				<a href="#">
        
        			<!-- Content for Card -->
        			<figure class="card">

						<img src={item.image} alt="Character Image">
          			
						<figcaption class="caption">
            	
							<h3 class="caption-title">{item.name}</h3>
           
								<p>Status: {item.status}</p>
								<p>Species: {item.species}</p>
								<p>Gender: {item.gender}</p>

          </figcaption>
        </figure>
      </a>
    </li>

					)
				}
		  
			</ul>
		  </main>
		  


	</body>
</html>
